{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://growing-web.manifest/schema.json",
  "title": "Web Project Manifest",
  "description": "web-project manifest field in growing-web.",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "entries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/entry"
      },
      "minLength": 1
    },
    "entry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "input": { "type": "string" },
        "publicPath": { "type": "string" },
        "output": {
          "$ref": "#/definitions/output"
        }
      },
      "required": ["input"]
    },

    "output": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dir": { "type": "string" },
        "assetFileNames": { "type": "string" },
        "chunkFileNames": { "type": "string" },
        "entryFileNames": { "type": "string" },
        "sourcemap": { "type": "boolean" },
        "declaration": { "type": "boolean" },
        "externals": {
          "type": "array",
          "items": { "type": "string" }
        },
        "formats": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["cjs", "esm", "iife", "umd", "system"]
          }
        },
        "globals": {
          "type": "object",
          "patternProperties": {
            "[a-zA-Z]+": {
              "type": "string"
            }
          }
        },
        "banner": { "$ref": "#/definitions/banner" },
        "meta": { "$ref": "#/definitions/meta" }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "umdName": { "type": "string" }
      }
    },
    "banner": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "header": { "type": "string" },
        "footer": { "type": "string" }
      }
    },
    "formats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["cjs", "esm", "iife", "umd", "system"]
      }
    },
    "server": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": { "type": "number", "minimum": 0, "maximum": 65535 },
        "host": { "type": "string" },
        "proxy": { "$ref": "#/definitions/proxy" }
      }
    },
    "proxy": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "url": { "type": "string" },
          "target": { "type": "string" },
          "secure": { "type": "boolean" },
          "changeOrigin": { "type": "boolean" },
          "pathRewrite": {
            "$ref": "#/definitions/pathRewrite"
          }
        },
        "required": ["url", "target"]
      }
    },
    "pathRewrite": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "regular": {
            "anyOf": [{ "instanceof": "RegExp" }, { "type": "string" }]
          },
          "replacement": {
            "type": "string"
          }
        }
      }
    }
  },
  "properties": {
    "$schema": {
      "description": "schema remote path.",
      "type": "string"
    },
    "schemaVersion": {
      "description": "web project manifest version.",
      "type": "string"
    },
    "entries": {
      "$ref": "#/definitions/entries",
      "description": "application entries file."
    },
    "server": {
      "$ref": "#/definitions/server",
      "description": "local server configuration"
    }
  },
  "required": ["schemaVersion", "entries"]
}
